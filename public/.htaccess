# Configuración de PHP (mantener existente)
php_flag display_errors Off
php_flag log_errors On
php_value error_log /home/u997591684/domains/reservabot.es/php-error.log

# Configuración de sesiones PHP
php_value session.cookie_httponly 1
php_value session.use_strict_mode 0
php_value session.cookie_secure 1

# Habilitar reescritura de URLs
RewriteEngine On

# Permitir acceso directo a la carpeta debug/
RewriteRule ^debug/ - [L]

# Excluir archivos estáticos y directorios especiales
RewriteRule ^assets/ - [L]
RewriteRule ^uploads/ - [L]
RewriteRule ^includes/ - [L]
RewriteRule ^\.well-known/ - [L]

# Excluir archivos que deben ser accesibles directamente
RewriteRule ^robots\.txt$ - [L]
RewriteRule ^sitemap\.xml$ - [L]
RewriteRule ^favicon\.ico$ - [L]

# Proteger archivos PHP directos (excepto index.php)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.php$
RewriteCond %{REQUEST_URI} !^/index\.php$
RewriteRule . /index.php [L]

# Redirigir todo el tráfico a index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Proteger archivos sensibles
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

